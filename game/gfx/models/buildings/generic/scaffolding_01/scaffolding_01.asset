entity = 
{
	name = "scaffolding_01_entity"
	
	locator = { name = center position = { 0 0 0 } rotation = { 0 0 0 }}
	
	default_state = "start"

	state = 
	{
		name = "start"
		looping = no
		state_time = 2
			
			
		#VFX Particle
		event = 
		{ 
			time = 0 
			node = "center" 
			particle = "infrastructure/construction_begin_small"
			trigger_once = yes 
			keep_particle = yes 
		}
		
		#Scaffolding Mesh Fade In
		event = 
		{
			time = 0
			node = "center" 
			entity = "scaffolding_01_mesh_entity"
			attachment_id = "scaffolding_01_mesh_entity_attachment"
			life = 2
			entity_fade_speed = 2
		}
				
		next_state = "idle"
	}
	
	state = 
	{
		name = "idle"
		looping = no
			
		state_time = 2
		
		#VFX Particles
		event = 
		{ 
			time = 0 
			node = "center" 
			particle = "infrastructure/construction_dust_small"
			trigger_once = yes 
			keep_particle = yes 
		}
		
		#Scaffolding Mesh
		start_event = 
		{ 
			node = "center" 
			entity = "scaffolding_01_mesh_entity"
		}
		

