entity =
{
	name = "scaffolding_02_mesh_entity"
	pdxmesh = "scaffolding_02_mesh"

	default_state = "start"

	state = {
		name = "start"
		animation = "idle_animation"
		looping = yes
	}
}

entity =
{
	name = "scaffolding_02_mesh_working_entity"
	pdxmesh = "scaffolding_02_mesh"

	default_state = "start"

	state = {
		name = "start"
		animation = "working_animation"
		looping = yes
	}
}


entity = {
	name = "scaffolding_02_entity"
	locator = { name = center position = { 0 0 0 } rotation = { 0 0 0 }}

	default_state = "start"

	state =
	{
		name = "start"
		state_time = 2
		looping = no

		event =
		{
			time = 0
			node = "center"
			particle = "infrastructure/construction_begin_big"
			trigger_once = yes
			keep_particle = no
		}

		#Scaffolding Mesh Fade In
		event =
		{
			time = 0
			node = "center"
			entity = "scaffolding_02_mesh_entity"
			attachment_id = "scaffolding_02_mesh_entity_attachment"
			life = 2
			entity_fade_speed = 2
		}

		next_state = "idle"
	}

	state = {
		name = "idle"
		state_time = 2
		looping = no

		event =
		{
			time = 0
			node = "center"
			particle = "infrastructure/construction_dust_big"
			trigger_once = yes
			keep_particle = yes
		}

		#Scaffolding Mesh
		start_event =
		{
			node = "center"
			entity = "scaffolding_02_mesh_working_entity"
		}

		#start_event = { sound  = { soundeffect = "event:/SFX/Ambience/3D/Entity/scaffolding/sml_start" }  }
		#sounds are disabled until https://beta.paradoxplaza.com/browse/PRCAL-12652 is resolved
	}

	state =
	{
		name = "end"
		state_time = 5
		looping = no

		event =
		{
			time = 0
			node = "center"
			particle = "infrastructure/construction_complete_big"
			trigger_once = yes
			keep_particle = no
		}

		#Scaffolding Mesh
		event =
		{
			time = 0
			node = "center"
			attachment_id = "scaffolding_02_mesh_entity_attachment"
			entity = "scaffolding_02_mesh_working_entity"
		}

		#Scaffolding Mesh Fade Out
		event =
		{
			time = 0.7
			node = "center"
			remove_attachment = "scaffolding_02_mesh_entity_attachment"
			entity_fade_speed = 8.0
		}

		#start_event = { sound  = { soundeffect = "event:/SFX/Ambience/3D/Entity/scaffolding/sml_stop" }  }
	}
}


