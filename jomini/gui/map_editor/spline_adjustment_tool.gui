hbox = {
	name = "spline_adjustment_tool_widget"
	margin = { 2 2 }
	spacing = 4

	layoutpolicy_horizontal = expanding
	layoutpolicy_vertical = expanding

	tooloptions_checkbutton = {
		name = "mode_anchor_selection"

		checked = "[SplineAdjustmentTool.IsAnchorSelectionSelected]"
		onclick = "[SplineAdjustmentTool.SelectAnchorSelection]"

		raw_tooltip = "Select and modify anchors"
		shortcut = "spline_tool_select_anchor"
		size = { 32 32 }
		toolbox_icon = {
			texture = "gfx/editor_spline_network/select_anchor.png"
			size = { 24 24 }
		}
					
	}
	
	toolbox_button = {
		enabled = "[SplineAdjustmentTool.CanDeleteSelection]"
		visible = "[SplineAdjustmentTool.IsAnchorSelectionSelected]"
		onclick = "[SplineAdjustmentTool.DeleteSelected]"
		raw_tooltip = "Delete selected strips or anchors"
		
		shortcut = "mapobjects_tool_delete"
		toolbox_icon = {
			texture = "gfx/editor_terrain/delete_objects.dds"
			size = { 24 24 }
		}
	}
	
		tooloptions_divider = {
	}
	
	toolbox_button = {
		enabled = "[SplineAdjustmentTool.CanAddAnchorsInSelection]"
		visible = "[SplineAdjustmentTool.IsAnchorSelectionSelected]"
		onclick = "[SplineAdjustmentTool.AddAnchorsToAdjacentSelectedPairs]"
		raw_tooltip = "Add new anchors between selected anchors"
		
		toolbox_icon = {
			texture = "gfx/editor_spline_network/create_anchor.png"
			size = { 24 24 }
		}		
	}
	
	toolbox_checkbutton = {
		name = "mode_select_map_content"
		visible = "[SplineAdjustmentTool.HasMapContent]"
		
		checked = "[SplineAdjustmentTool.IsMapContentSelectionSelected]"
		onclick = "[SplineAdjustmentTool.SelectMapContentSelection]"
		
		raw_tooltip = "Territory selection mode."
		shortcut = "spline_tool_select_map_content"
		size = { 32 32 }
		toolbox_icon = {
			texture = "gfx/editor_terrain/select_map_content.dds"
			size = { 24 24 }
		}
	}
	
	tooloptions_divider = {
	}
	
	toolbox_checkbutton = {
		checked = "[SplineAdjustmentTool.IsNavMeshVisible]"
		onclick = "[SplineAdjustmentTool.ToggleNavMeshVisibility]"
		raw_tooltip = "Show or hide the navigation mesh that splines are placed on"
		
		toolbox_icon = {
			texture = "gfx/editor_spline_network/navmesh.png"
			size = { 24 24 }
		}
	}

	tooloptions_divider = {
    }

	toolbox_checkbutton = {
        name = "spline_tool_mergenotes_toggle_all"
        visible = "[SplineAdjustmentTool.HasMergeNotes]"

        checked = "[SplineAdjustmentTool.IsShowingAllMergeNotes]"
        onclick = "[SplineAdjustmentTool.ToggleShowingAllMergeNotes]"

        raw_tooltip = "Show all merge notes. Orange = Original, Yellow = Conflicting Import, Green = New"
        shortcut = "spline_tool_mergenotes_toggle_all"
        size = { 32 32 }
        toolbox_icon = {
            texture = "gfx/editor_spline_network/merge_notes_all.png"
            size = { 18 18 }
        }
    }

	toolbox_checkbutton = {
        name = "spline_tool_mergenotes_toggle_conflicts"
        visible = "[SplineAdjustmentTool.HasMergeNotes]"

        checked = "[SplineAdjustmentTool.IsShowingConflictsMergeNotes]"
        onclick = "[SplineAdjustmentTool.ToggleShowingConflictsMergeNotes]"

        raw_tooltip = "Show all conflict merge notes. Orange = Original, Yellow = Conflicting Import, Green = New"
        shortcut = "spline_tool_mergenotes_toggle_conflicts"
        size = { 32 32 }
        toolbox_icon = {
            texture = "gfx/editor_spline_network/merge_notes_conflicts.png"
            size = { 18 18 }
        }
    }
	
	widget = {
		layoutpolicy_horizontal = expanding
	}
	
}

toolbox_checkbutton = {
	name = "spline_adjustment_tool_toolbox_button"
	shortcut = "spline_adjustment_tool"
	raw_tooltip = "Spline Network Adjustment Tool"
	checked = "[SplineAdjustmentToolMode.IsSelected]"
	
	toolbox_icon = {
		texture = "gfx/tools/material/timeline.png"
	}
}
